generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model User {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  id Int @id @default(autoincrement())
  email String @unique
  username String
  password String
  tasks Task[]
}

model Task {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  id Int @id @default(autoincrement())
  name String
  description String @db.Text
  user User @relation(fields: [userId], references: [id])
  userId Int
  parentTask Task? @relation("ParentChildren", fields: [parentTaskId], references: [id])
  parentTaskId Int?
  childTaskId Task[] @relation("ParentChildren")
}
